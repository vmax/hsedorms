<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/train"
            android:scaleType="centerInside"
            android:layout_marginRight="@dimen/card_margin"
            android:id="@+id/train$icon" />

        <!--
        <TextView
            android:text="Москва (Белорусский вокзал) — Звенигород"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/train$title"
            android:layout_toRightOf="@id/train$icon"

            android:gravity="left" />

            -->

        <TextView
            android:text="Одинцово"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/train$to"
            android:layout_toRightOf="@id/train$icon"
            style="@style/TextAppearance.AppCompat.Headline"
            android:gravity="center" />

        <!--
        <TextView
            android:text="остановки"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/train$stops"
            android:layout_below="@id/train$to"
            android:layout_toRightOf="@id/train$icon"
            style="?android:attr/textAppearanceSmall"
            android:gravity="center" /> -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/train$departure"
            android:text="9:00"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_alignTop="@id/train$to"
            android:layout_alignBottom="@id/train$to"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_below="@id/train$to"
            android:id="@+id/train$arrival"
            android:text="10:00"
            android:layout_alignBottom="@id/train$icon"
            style="@style/TextAppearance.AppCompat.Body1"/>

        <!--
        <TextView
            android:text="9:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/train$departure"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignTop="@+id/train$to"
            android:layout_alignBottom="@+id/train$to"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center" />

        <TextView
            android:text="9:20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/train$arrival"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_below="@id/train$departure"
            android:layout_alignBottom="@id/train$icon"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


            -->

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dots"
        android:layout_gravity="bottom|end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="электричка"
        android:layout_margin="2dp"
        android:layout_gravity="left|bottom"
        style="@style/HintText" />

</android.support.v7.widget.CardView>