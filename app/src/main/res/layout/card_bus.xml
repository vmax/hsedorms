<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/bus"
            android:scaleType="centerInside"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:id="@+id/bus$icon"
            />

        <TextView
            android:text="Дубки"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bus$_from"
            android:layout_toRightOf="@id/bus$icon"
            style="?android:attr/textAppearanceLarge"/>

        <TextView
            android:text="Одинцово"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bus$_to"
            android:layout_below="@+id/bus$_from"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_toRightOf="@id/bus$icon"
            style="?android:attr/textAppearanceLarge"/>

        <TextView
            android:text="9:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bus$departure"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            style="?android:attr/textAppearanceMedium"
            android:layout_alignBottom="@id/bus$_from"
            />

        <TextView
            android:text="9:20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bus$arrival"
            style="?android:attr/textAppearanceMedium"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/bus$departure"
            android:layout_alignTop="@id/bus$_to"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>