<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/bus"
            android:scaleType="centerInside"
            android:layout_marginRight="@dimen/card_margin"
            android:id="@+id/bus$icon"
            />

        <TextView
            android:text="Дубки"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bus$_from"
            android:layout_toRightOf="@id/bus$icon"
            style="@style/Base.TextAppearance.AppCompat.Headline" />

        <TextView
            android:text="Одинцово"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bus$_to"
            android:layout_below="@+id/bus$_from"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_toRightOf="@id/bus$icon"
            style="@style/Base.TextAppearance.AppCompat.Headline" />

        <TextView
            android:text="9:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bus$departure"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/bus$_from"
            android:layout_alignBottom="@id/bus$_from"
            android:singleLine="false"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:gravity="center" />

        <TextView
            android:text="9:20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bus$arrival"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/bus$departure"
            android:layout_alignTop="@id/bus$_to"
            android:layout_alignBottom="@id/bus$_to"
            style="@style/Base.TextAppearance.AppCompat.Body1" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="автобус KLAvto"
        android:layout_margin="2dp"
        android:layout_gravity="left|bottom"
        style="@style/HintText" />

</android.support.v7.widget.CardView>